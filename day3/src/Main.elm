module Main exposing (main)

import Array exposing (Array)
import Html exposing (Html, div, text)


type Location
    = Square
    | Tree


type alias Input =
    Array (Array Location)


type alias Pos =
    ( Int, Int )


type alias Slope =
    Pos


type alias Model =
    { input : Input
    , pos : Pos
    , treeCount : Int
    }


output : String -> Html msg
output s =
    div [] [ text s ]


main : Html.Html msg
main =
    let
        model =
            { input = parseInput input
            , pos = ( 0, 0 )
            , treeCount = 0
            }

        partA =
            walk ( 3, 1 ) model

        partB =
            (walk ( 1, 1 ) model).treeCount
                * (walk ( 3, 1 ) model).treeCount
                * (walk ( 5, 1 ) model).treeCount
                * (walk ( 7, 1 ) model).treeCount
                * (walk ( 1, 2 ) model).treeCount
    in
    div []
        [ output "part1"
        , output (String.fromInt partA.treeCount)
        , output "part2"
        , output (String.fromInt partB)
        ]


walk : Slope -> Model -> Model
walk slope model =
    case getAt model.pos model.input of
        Just loc ->
            incrementIfTree loc model
                |> updatePos slope
                |> walk slope

        Nothing ->
            model


updatePos : Slope -> Model -> Model
updatePos ( x, y ) model =
    { model | pos = model.pos |> Tuple.mapBoth ((+) x) ((+) y) }


incrementIfTree : Location -> Model -> Model
incrementIfTree loc model =
    case loc of
        Tree ->
            { model | treeCount = model.treeCount + 1 }

        _ ->
            model


getAt : Pos -> Input -> Maybe Location
getAt ( x, y ) inp =
    case Array.get y inp of
        Just row ->
            Array.get (modBy (Array.length row) x) row

        _ ->
            Nothing


parseInput : String -> Input
parseInput s =
    String.split "\n" s
        |> List.map
            (\line ->
                String.toList line
                    |> List.filterMap toLocation
                    |> Array.fromList
            )
        |> Array.fromList


toLocation : Char -> Maybe Location
toLocation char =
    case char of
        '.' ->
            Just Square

        '#' ->
            Just Tree

        _ ->
            Nothing


